set -e

if [ "$#" -ne 0 ]; then
    echo "usage: makesnap"
    exit 2
fi

BASE=`python3 -c "from duplicity import __version__; print(__version__, end='')"`
REVNO=`bzr revno`
MYVERSION=${BASE}.${REVNO}
echo "makesnap of ${MYVERSION}"

# run makedist
dist/makedist

# make clean source dir
rm -rf build
mkdir -p build
tar xf duplicity-${MYVERSION}.tar.gz -C build
cd build/duplicity-${MYVERSION}

# print version in build copy of snapcraft.yaml
head -2 snap/snapcraft.yaml | tail -1

# make sure we're logged in
snapcraft login --with ~/.snaplogin

# build snap on Ubuntu 18.04 VM.  Multipass does not work well on MacOS.
snapcraft snap --output duplicity_${MYVERSION}_amd64.snap --destructive-mode

# run snap review tools before pushing to store
review-tools.snap-review --allow-classic duplicity_${MYVERSION}_amd64.snap

# push to edge
snapcraft push duplicity_${MYVERSION}_amd64.snap --release edge

# sign snap
snapcraft sign-build duplicity_${MYVERSION}*.snap --key-name firstprime

# mv into working source tree
mv duplicity_${MYVERSION}_amd64.snap* ../..
cd ../..

# clean up
rm -rf build
